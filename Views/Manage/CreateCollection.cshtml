@model SeniorProject.Models.ManageViewModels.CreateCollectionViewModel;
@{
    ViewData["Title"] = "Create New Collection";

    ViewData.AddActivePage(ManageNavPages.Collections);
}
<h3>Create New Collection</h3>
<hr />
@using (Html.BeginForm("CreateCollection", "Manage", FormMethod.Post))
{
    @Html.LabelFor(model => model.Name)
    <br />
    @Html.TextBoxFor(model => model.Name)
    <br />
    @Html.ValidationMessageFor(model => model.Name)
    <br />
    <button type="submit">Create</button>
}
    <br />
<div>
    <a asp-action="Collections">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
